@using CursoUdemy.Models
@model List<ModeloMV>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>@Html.LabelFor(model => Model[0].iidmodelo)</td>
            <td>@Html.LabelFor(model => Model[0].nombre)</td>
            <td>@Html.LabelFor(model => Model[0].descripcion)</td>
            <td>Operaciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.iidmodelo</td>
            <td>@item.nombre</td>
            <td>@item.descripcion</td>
            <td></td>
        </tr>
        }
    </tbody>
</table>
