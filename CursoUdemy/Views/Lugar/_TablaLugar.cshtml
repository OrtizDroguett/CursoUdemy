@using CursoUdemy.Models
@model List<LugarMV>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>@Html.LabelFor(model => Model[0].iidlugar)</td>
            <td>@Html.LabelFor(model => Model[0].nombre)</td>
            <td>@Html.LabelFor(model => Model[0].descripcion)</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.iidlugar</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>
                    @Html.ActionLink(" ","Editar","Lugar", new {@class="fa fa-edit btn btn-primary" })
                </td>
            </tr>
        }

    </tbody>
</table>