@using CursoUdemy.Models
@model List<UsuarioMV>
@{
    ViewBag.Title = "Index";
    List<SelectListItem> listaPersonas = (List<SelectListItem>)ViewBag.listaPersonas;
    List<SelectListItem> listaRol = (List<SelectListItem>)ViewBag.listaRol;
}

<h2>Index</h2>
<!-- Button trigger modal -->
<button type="button" onclick="Agregar()" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Agregar
</button>
@using (Ajax.BeginForm("Filtro", "Usuario", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "DivUsuario", InsertionMode = InsertionMode.Replace }, new { @id = "frmFiltro" }))
{

    @Html.Label("Filtrar por: ")
    @Html.TextBox("txtNombreFiltrado",null, new {@class="form-control" })
    <div id="DivUsuario">
        @Html.Partial("_TablaUsuario")
    </div>
}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Ajax.BeginForm("Guardar", "Usuario", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "Guardar" }))
            {
                <div class="modal-body">
                    @Html.Hidden("Titulo")
                    @Html.Hidden("nombrePersona")
                    @Html.Label("ID")
                    @Html.TextBox("iidusuario", null, new { @class = "form-control", @Readonly = true })
                    @Html.Label("Nombre Usuario")
                    @Html.TextBox("nombreusuario", null, new { @class = "form-control" })
                    @Html.Label("Contraseña")
                    @Html.Password("contra", null, new { @class = "form-control" })
                    @Html.Label("Nombre Persona")
                    @Html.DropDownList("iid", listaPersonas, null, new { @class = "form-control" })
                    @Html.Label("Rol")
                    @Html.DropDownList("iidrol", listaRol, null, new { @class = "form-control" })
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnCerrar" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            }

        </div>
    </div>
</div>
<script>
    var txtNombreFiltrado = document.getElementById("txtNombreFiltrado");
    txtNombreFiltrado.onkeyup = function () {
        $("#frmFiltro").trigger("submit")
    }
    function Agregar() {
        document.getElementById("Titulo").value = 1;
        document.getElementById("nombreusuario").value = "";
        document.getElementById("contra").value = "";
        document.getElementById("iid").value = "";
        document.getElementById("iidrol").value = "";
    }
    var iid = document.getElementById("iid");
    iid.onchange = function () {
        document.getElementById("nombrePersona").value = iid.options[iid.selectedIndex].text;

    }
    function Guardar(Resultado) {
        if (Resultado >= 1) {
            $("#frmFiltro").trigger("submit")
            alert("Se ha guardado con exito");
            document.getElementById("btnCerrar").click();
        } else {
            alert("Ha ocurrido un error");
        }
    }
</script>